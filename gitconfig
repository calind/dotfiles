[core]
	excludesfile = ~/.dotfiles/gitignore
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	unstage = reset HEAD --
	tree = log --oneline --graph --abbrev-commit --decorate --date=relative --all
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = green bold
	frag = yellow bold
	old = red bold
	new = green
	witespace = red reverse
[color "status"]
	added = yellow
	changed = green
	untracked = yellow bold
[push]
	default = simple
[tag]
	forceSignAnnotated = true
