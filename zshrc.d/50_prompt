autoload colors && colors
# cheers, @ehrenmurdick
# http://github.com/ehrenmurdick/config/blob/master/zsh/prompt.zsh

GIT_PROMPT_BEFORE=" ("
GIT_PROMPT_AFTER=")"
ENV_PROMPT_BEFORE=":"
ENV_PROMPT_AFTER=""

precmd() {
    git_prompt
    env_prompt
    print -Pn "\e]0;λ %~$git_prompt\a"
    PROMPT="%{$fg[yellow]%}λ$env_prompt%{$reset_color%} %~$git_prompt ❯ "
}
